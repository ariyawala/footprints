<h1>Articles#index</h1>
<%# マイページが出来たら消す %>
  <ul class='lists-right'>
    <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
      <li><%= link_to 'log out', destroy_user_session_path, method: :delete, class: "logout" %></li>
    <% else %>
      <li><%= link_to 'log in', new_user_session_path, class: "login" %></li>
      <li><%= link_to 'create an account', new_user_registration_path, class: "sign-up" %></li>
    <% end %>
  </ul>
<%# マイページが出来たら消す %>

<section class="bg-light text-center py-5">
  <div class="container-fluid">
    <% if @articles.present? %>
          <%# <li class='list'> %>
      <div class='row align-items-center' style="margin-left: 0; margin-right: 0;">
        <% @articles.each do |article| %>
          <%= link_to article_path(article.id) do %>
            <div class="col-md img" style="padding: 0;">
              <%= image_tag article.image if article.image.attached? %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>


