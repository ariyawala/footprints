<div class="sign-up-page">
  <div class="card">
    <div class="card-header">
      edit post
    </div>

    <div class="card-body">
      <%= form_with model:@article, url: article_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

        <div class="form-group">
          <%= f.text_field :title, class: "form-control", placeholder: "title" %>
        </div>

        <div class="form-group">
          <%= f.file_field :image, class: "form-control", id:"article-image"  %>
        </div>

        <div class="form-group">
          <%= f.text_area :memo, class: "form-control", placeholder: "memo", rows: "10" %>
        </div>

        <div class="form-group">
          <%= f.text_field :place, class: "form-control", placeholder: "place" %>
        </div>

        <div class="form-group">
          <%= f.date_field :date, class: "form-control date-picker" %>
        </div>

        <div class="sign-up__submit-btn">
          <%= f.submit "post", class: "btn btn-block btn-outline-info" %>
        </div>
      <% end %>
    </div>

  </div>
</div>